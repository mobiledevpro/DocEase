<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/sodk_editor_button_pressed" />
            <corners android:radius="10dp" />
            <padding android:left="7dp" android:top="7dp" android:right="7dp" android:bottom="7dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/sodk_editor_button_normal" />
            <padding android:left="7dp" android:top="7dp" android:right="7dp" android:bottom="7dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/sodk_editor_button_selected" />
            <corners android:radius="10dp" />
            <padding android:left="7dp" android:top="7dp" android:right="7dp" android:bottom="7dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/sodk_editor_button_normal" />
            <padding android:left="7dp" android:top="7dp" android:right="7dp" android:bottom="7dp" />
        </shape>
    </item>
</selector>