<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/zui_banner_lost_connection_background_color"
    android:orientation="horizontal">

    <TextView
        android:id="@id/zui_lost_connection_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="@string/zui_label_reconnecting"
        android:textColor="@color/zui_color_white_100" />

    <android.supportv1.design.button.MaterialButton
        android:id="@id/zui_lost_connection_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/_10sdp"
        android:text="@string/zui_label_retry_now"
        android:textColor="@color/zui_banner_lost_connection_text_color"
        app:rippleColor="@color/zui_banner_lost_connection_text_color" />
</FrameLayout>