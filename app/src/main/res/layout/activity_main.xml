<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            tools:context=".ui.component.home.MainActivity">

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ProgressBar
                android:id="@+id/pb_loading_data_am"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:indeterminateTint="@color/app_color"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/lnl_main_root_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_alignParentTop="true"
                        android:clickable="true"
                        android:focusable="true">

                        <RelativeLayout
                            android:id="@+id/rll_activity_main__app_menu"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:background="@color/white"
                            android:orientation="vertical"
                            tools:ignore="MissingConstraints">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/viewChange"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:clickable="true"
                                android:padding="9dp"
                                app:srcCompat="@drawable/ic_hamburger" />

                            <LinearLayout
                                android:id="@+id/container_premium_title"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_toEndOf="@+id/viewChange">

                                <TextView
                                    android:id="@+id/txv_activity_main__app_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"
                                    android:fontFamily="@font/nunito"
                                    android:gravity="center"
                                    android:text="@string/app_name"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_pro_tag"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="4dp"
                                    android:layout_toEndOf="@+id/txv_activity_main__app_name"
                                    android:background="@drawable/bg_pro_tag"
                                    android:backgroundTint="#FDC605"
                                    android:paddingStart="10dp"
                                    android:paddingTop="2dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="2dp"
                                    android:text="PRO"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:visibility="gone" />

                            </LinearLayout>


                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/btn_fragment_file_layout_type"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="65dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_toStartOf="@id/search_button"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_list_black" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/search_button"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="1dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                app:srcCompat="@drawable/ic_search_black" />
                        </RelativeLayout>
                        <!--                <LinearLayout-->
