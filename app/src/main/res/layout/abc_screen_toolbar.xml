<?xml version="1.0" encoding="utf-8"?>
<android.supportv1.v7.widget.ActionBarOverlayLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/decor_content_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/abc_screen_content_include" />

    <android.supportv1.v7.widget.ActionBarContainer
        android:id="@id/action_bar_container"
        style="?actionBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="top"
        android:touchscreenBlocksFocus="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@id/action_bar"
            style="?toolbarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationContentDescription="@string/abc_action_bar_up_description" />

        <android.supportv1.v7.widget.ActionBarContextView
            android:id="@id/action_context_bar"
            style="?actionModeStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="?actionBarTheme"
            android:visibility="gone" />
    </android.supportv1.v7.widget.ActionBarContainer>
</android.supportv1.v7.widget.ActionBarOverlayLayout>