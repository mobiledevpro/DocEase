<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color_main"
    android:padding="5dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imv_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:background="@color/sodk_editor_transparent"
        android:contentDescription="@string/todo"
        android:padding="7dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/toolbar_cancel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:padding="4dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_toolbar_cancel"
        app:tint="@color/material_blue_grey_900" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/toolbar_cancel"
        android:padding="2dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_toolbar_done"
        app:tint="@color/material_blue_grey_900" />

    <TextView
        android:id="@+id/toolbar_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/nunito"
        android:padding="4dp"
        android:text="@string/save_cta"
        android:textColor="@color/text_color"
        android:textSize="16sp" />


    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imv_back"
        android:adjustViewBounds="true"
        android:background="@color/sodk_editor_transparent"
        android:contentDescription="@string/todo"
        android:scaleType="fitCenter"
        android:src="@drawable/sodk_editor_icon_back"
        android:visibility="gone"
        app:tint="@color/black_light" />

    <com.artifex.sonui.editor.SOTextView
        android:id="@+id/footer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/imv_back"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/create_document"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        android:visibility="gone" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/toolbar_copy"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="6dp"
        android:layout_toStartOf="@+id/toolbar_paste"
        android:padding="4dp"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_toolbar_copy"
        app:tint="@color/text_color" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/toolbar_search"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="6dp"
        android:layout_toStartOf="@+id/toolbar_share"
        android:padding="2dp"
        app:srcCompat="@drawable/ic_search_black"
        app:tint="@color/text_color" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/toolbar_paste"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="6dp"
        android:layout_toStartOf="@+id/toolbar_search"
        android:padding="4dp"
        app:srcCompat="@drawable/ic_new_paste"
        app:tint="@color/text_color" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/toolbar_share"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:padding="4dp"
        app:srcCompat="@drawable/ic_share_preview"
        app:tint="@color/text_color" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/toolbar_undo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="6dp"
        android:layout_toStartOf="@+id/toolbar_redo"
        android:padding="4dp"
        android:visibility="gone"
        app:srcCompat="@drawable/sodk_editor_icon_undo"
        app:tint="@color/material_blue_grey_900" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/toolbar_redo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="6dp"
        android:padding="4dp"
        android:visibility="gone"
        app:srcCompat="@drawable/sodk_editor_icon_redo"
        app:tint="@color/material_blue_grey_900" />
</RelativeLayout>


