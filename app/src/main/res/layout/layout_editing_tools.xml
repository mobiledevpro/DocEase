<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color_main"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/_50sdp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginStart="@dimen/_8sdp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/editor_menu_options"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:contentDescription="Menu"
            android:src="@drawable/ic_main_menu_options_excel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Menu"/>


    </LinearLayout>



    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="#777777" />

    <LinearLayout
        android:id="@+id/edit_tools_excel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/editor_tools_layout" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/insert_tools_excel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <include layout="@layout/sodk_editor_excel_insert_toolbar" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/format_tools_excel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <include layout="@layout/sodk_editor_format_toolbar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/formulas_tools_excel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <include layout="@layout/sodk_editor_formulas_toolbar" />

    </LinearLayout>


<!--    <LinearLayout-->
<!--        android:id="@+id/edit_tools_ppt"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:visibility="gone">-->
<!--        <include layout="@layout/editor_tools_layout" />-->
<!--    </LinearLayout>-->

    <LinearLayout
        android:id="@+id/insert_tools_ppt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <include layout="@layout/sodk_editor_powerpoint_insert_toolbar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/format_tools_ppt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <include layout="@layout/sodk_editor_powerpoint_format_toolbar" />
    </LinearLayout>

</LinearLayout>