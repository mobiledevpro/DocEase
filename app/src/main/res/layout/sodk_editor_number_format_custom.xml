<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sodk_editor_number_format_popup"
    android:orientation="vertical">

    <com.artifex.sonui.editor.SOTextView
        style="@style/sodk_editor_wheel_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_3sdp"
        android:text="@string/sodk_editor_number_format_custom" />

    <kankan.wheel.widget.WheelView
        android:id="@id/custom_wheel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_5sdp" />

    <LinearLayout
        android:id="@id/create_new_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal">

        <com.artifex.sonui.editor.SOTextView
            style="@style/sodk_editor_wheel_checkbox_label_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="@string/sodk_editor_create_new"
            android:textSize="18.0sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="@dimen/_1sdp"
            android:layout_weight="1.0"
            android:clickable="false" />

        <com.artifex.sonui.editor.SOTextView
            style="@style/sodk_editor_wheel_plus_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="+"
            android:textSize="17sp" />
        />
    </LinearLayout>

    <LinearLayout
        android:id="@id/edit_function_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal">

        <com.artifex.sonui.editor.SOTextView
            style="@style/sodk_editor_wheel_checkbox_label_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sodk_editor_edit_function"
            android:textSize="18.0sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="@dimen/_1sdp"
            android:layout_weight="1.0" />

        <com.artifex.sonui.editor.SOTextView
            android:id="@id/edit_function_indicator"
            style="@style/sodk_editor_wheel_plus_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="17sp" />
        />
    </LinearLayout>
</LinearLayout>