<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_file_image"
        android:layout_width="0dp"
        android:layout_height="44dp"
        app:srcCompat="@drawable/ic_placeholder_doc"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/item_file_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textColor="#444546"
        android:layout_weight="7"
        android:fontFamily="@font/nunito"
        android:text="@string/agreement_copy_01_pdf"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/file_remove"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_tools_remove"
        android:layout_weight="1"/>

</LinearLayout>