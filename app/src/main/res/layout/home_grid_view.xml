<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="28dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="21dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_google_drive"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                app:srcCompat="@drawable/ic_google_drive"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_google_drive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:paddingTop="5dp"
                android:text="@string/google_drive"
                android:textColor="@color/text_color_home_screen"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@+id/btn_google_drive"
                app:layout_constraintHorizontal_bias="0.375"
                app:layout_constraintStart_toStartOf="@+id/btn_google_drive"
                app:layout_constraintTop_toBottomOf="@+id/btn_google_drive" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_favourite"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_favourite"
                app:layout_constraintEnd_toStartOf="@+id/btn_screenshots"
                app:layout_constraintStart_toEndOf="@+id/btn_google_drive"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_favourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:paddingTop="5dp"
                android:text="@string/favourite"
                android:textColor="@color/text_color_home_screen"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@+id/btn_favourite"
                app:layout_constraintStart_toStartOf="@+id/btn_favourite"
                app:layout_constraintTop_toBottomOf="@+id/btn_favourite" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_screenshots"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/ic_screen_shot"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_screenshots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/nunito"
                android:paddingTop="5dp"
                android:text="@string/screenshots"
                android:textColor="@color/text_color_home_screen"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@+id/btn_screenshots"
                app:layout_constraintStart_toStartOf="@+id/btn_screenshots"
                app:layout_constraintTop_toBottomOf="@+id/btn_screenshots" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_ppt"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                app:srcCompat="@drawable/ic_ppt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_ppt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:paddingTop="5dp"
                android:text="@string/ppt"
                android:textColor="@color/text_color_home_screen"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@+id/btn_ppt"
                app:layout_constraintStart_toStartOf="@+id/btn_ppt"
                app:layout_constraintTop_toBottomOf="@+id/btn_ppt" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_excel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_excel"
                app:layout_constraintEnd_toStartOf="@+id/btn_text"
                app:layout_constraintStart_toEndOf="@+id/btn_ppt"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_excel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:paddingTop="5dp"
                android:text="@string/excel"
                android:textColor="@color/text_color_home_screen"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@+id/btn_excel"
                app:layout_constraintStart_toStartOf="@+id/btn_excel"
                app:layout_constraintTop_toBottomOf="@+id/btn_excel" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_text"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/ic_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:paddingTop="5dp"
                android:text="@string/text"
                android:textColor="@color/text_color_home_screen"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@+id/btn_text"
                app:layout_constraintStart_toStartOf="@+id/btn_text"
                app:layout_constraintTop_toBottomOf="@+id/btn_text" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="399dp"
            android:layout_height="89dp"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_all"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_all" />

            <TextView
                android:id="@+id/tv_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:paddingTop="5dp"
                android:text="@string/all"
                android:textColor="@color/text_color_home_screen"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@+id/btn_all"
                app:layout_constraintStart_toStartOf="@+id/btn_all"
                app:layout_constraintTop_toBottomOf="@+id/btn_all" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_recent"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintEnd_toStartOf="@+id/btn_word"
                app:layout_constraintStart_toEndOf="@+id/btn_all"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_recent" />

            <TextView
                android:id="@+id/tv_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:paddingTop="5dp"
                android:text="@string/recent"
                android:textColor="@color/text_color_home_screen"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@+id/btn_recent"
                app:layout_constraintStart_toStartOf="@+id/btn_recent"
                app:layout_constraintTop_toBottomOf="@+id/btn_recent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_word"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_word" />

            <TextView
                android:id="@+id/tv_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:paddingTop="5dp"
                android:text="@string/word"
                android:textColor="@color/text_color_home_screen"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@+id/btn_word"
                app:layout_constraintStart_toStartOf="@+id/btn_word"
                app:layout_constraintTop_toBottomOf="@+id/btn_word" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_pdf"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                app:srcCompat="@drawable/ic_pdf"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_al"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:paddingTop="5dp"
                android:text="@string/pdf"
                android:textColor="@color/text_color_home_screen"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@+id/btn_pdf"
                app:layout_constraintStart_toStartOf="@+id/btn_pdf"
                app:layout_constraintTop_toBottomOf="@+id/btn_pdf" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
