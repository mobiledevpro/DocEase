<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/tools_bg_color"
  >

    <LinearLayout
        android:id="@+id/lnl_main_root_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        >

        <LinearLayout
            android:id="@+id/rll_activity_main__app_menu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fragment_file_back_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/todo"
                android:padding="7dp"
                app:srcCompat="@drawable/ic_back_button_preview" />

            <TextView
                android:id="@+id/txv_activity_main__app_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/all_files"
                android:fontFamily="@font/nunito"
                android:textColor="@color/black"
                android:textSize="18sp" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_fragment_file_layout_type"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="13dp"
                android:padding="4dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_up_down"
                android:tint="@color/black"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rll_main_activity__search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lnl_main_root_toolbar"
        android:background="@color/tools_bg_color"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_main_activity_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/rll_main_activity_no_file"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_emty"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/no_file_search" />

            <TextView
                android:id="@+id/tv_no_found"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_emty"
                android:gravity="center"
                android:text="@string/no_file_found"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_no_found"
                android:gravity="center"
                android:text="@string/no_file_hint"
                android:textColor="#B1B1B1"
                android:textSize="15sp" />
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/pgb_loading_search"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            android:visibility="gone" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_fragment_file_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/loading_files"
        android:background="@color/tools_bg_color"
        android:paddingTop="5dp"
        tools:listitem="@layout/item_file" />

    <LinearLayout
        android:background="@color/tools_bg_color"
        android:id="@+id/loading_files"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnl_main_root_toolbar"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <ProgressBar
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:indeterminateTint="@color/app_color"/>
        <TextView
            android:layout_marginStart="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading_files"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/tools_bg_color"
        android:id="@+id/rll_fragment_file__no_file"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_below="@+id/loading_files"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/no_file_search" />

        <TextView
            android:id="@+id/tv_no_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/no_file_bookmark"
            android:textColor="@color/colorNoFileB1BECD"
            android:textSize="13sp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pgb_fragment_file__loading"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/app_color" />
</RelativeLayout>