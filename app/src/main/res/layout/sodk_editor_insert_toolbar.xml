<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@id/insert_toolbar"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@id/insert_image_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_insert_png"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:padding="3dp"
                android:src="@drawable/sodk_editor_icon_insert_image" />

            <TextView
                android:id="@+id/tv_insert_png"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/sodk_editor_image_upper"
                android:textAllCaps="false"
                android:textColor="@color/black_trans"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/insert_photo_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_insert_photo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:padding="3dp"
                android:src="@drawable/sodk_editor_icon_insert_photo" />

            <TextView
                android:id="@+id/tv_insert_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/sodk_editor_photo_upper"
                android:textAllCaps="false"
                android:textColor="@color/black_trans"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</merge>