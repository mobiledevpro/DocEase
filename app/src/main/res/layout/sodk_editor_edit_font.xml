<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_edit_font"
    android:orientation="vertical"
    android:paddingBottom="8dp">

    <com.artifex.sonui.editor.SOTextView
        style="@style/sodk_editor_wheel_title_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:layout_marginBottom="3dp"
        android:text="@string/sodk_editor_edit_font" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <kankan.wheel.widget.WheelView
            android:id="@id/left_wheel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp" />

        <kankan.wheel.widget.WheelView
            android:id="@id/right_wheel"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp" />
    </LinearLayout>
</LinearLayout>