<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/tools_bg_color">

    <LinearLayout
        android:id="@+id/lnl_main_root_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rll_activity_main__app_menu"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fragment_file_back_btn"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_marginStart="13dp"
                android:contentDescription="@string/todo"
                android:padding="9.10dp"
                app:srcCompat="@drawable/ic_back_button_preview" />

            <TextView
                android:id="@+id/txv_activity_main__app_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="6.50dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/all_files"
                android:fontFamily="@font/nunito"
                android:textColor="@color/colorBlack"
                android:textSize="20.80sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_search"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginEnd="7.80dp"
                android:visibility="gone"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_search_black" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_ocr"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginEnd="7.80dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_ocr_fab"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="13dp"
                android:gravity="center|end"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imv_activity_main__donate"
                    android:layout_width="32.50dp"
                    android:layout_height="32.50dp"
                    android:layout_marginEnd="6.50dp"
                    android:contentDescription="@string/todo"
                    android:padding="5.20dp"
                    app:srcCompat="@drawable/bg_main_donate"
                    android:visibility="gone" />

<!--                <com.airbnb.lottie.LottieAnimationView-->
<!--                    android:id="@+id/imv_activity_main__gift_ads"-->
<!--                    android:layout_width="39dp"-->
<!--                    android:layout_height="39dp"-->
<!--                    android:visibility="gone" />-->

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imv_activity_main__pro"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:contentDescription="@string/todo"
                    android:padding="6.50dp"
                    app:srcCompat="@drawable/ic_edit_pro"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/activity_search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tools_bg_color"
            android:visibility="gone"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/lotView_activity_main__search"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginStart="13dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="9.10dp"
                app:srcCompat="@drawable/search_main" />

            <EditText
                android:id="@+id/edt_activity_main__search2"
                android:layout_width="match_parent"
                android:layout_height="50.0dip"
                android:layout_marginEnd="50.0dip"
                android:layout_toEndOf="@+id/lotView_activity_main__search"
                android:background="@null"
                android:hint="@string/click_here_to_search"
                android:fontFamily="@font/nunito"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:lines="1"
                android:maxLength="15"
                android:paddingStart="13dp"
                android:textColor="@color/text_search"
                android:textColorHint="#757c81"
                android:textCursorDrawable="@drawable/bg_edittext_cursor"
                android:textSize="16.90sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_fragment_file_refresh"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16.90dp"
                android:layout_toStartOf="@+id/btn_fragment_file_layout_type"
                app:srcCompat="@drawable/ic_home_refresh" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_fragment_file_layout_type"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16.90dp"
                app:srcCompat="@drawable/ic_up_down" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rll_main_activity__search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lnl_main_root_toolbar"
        android:background="@color/tools_bg_color"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_main_activity_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/rll_main_activity_no_file"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_emty"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/no_file_search" />

            <TextView
                android:id="@+id/tv_no_found"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_emty"
                android:gravity="center"
                android:text="@string/no_file_found"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_no_found"
                android:gravity="center"
                android:text="@string/no_file_hint"
                android:textColor="#B1B1B1"
                android:textSize="15sp" />
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/pgb_loading_search"
            android:layout_width="32.50dp"
            android:layout_height="32.50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="83.20dp"
            android:visibility="gone" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_fragment_file_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/loading_files"
        android:background="@color/tools_bg_color"
        tools:listitem="@layout/item_file" />
    <LinearLayout
        android:background="@color/tools_bg_color"
        android:id="@+id/loading_files"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnl_main_root_toolbar"
        android:gravity="center"
        android:layout_marginTop="6.50dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <ProgressBar
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:indeterminateTint="@color/app_color"/>
        <TextView
            android:layout_marginStart="2.60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading_files"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/tools_bg_color"
        android:id="@+id/rll_fragment_file__no_file"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_below="@+id/loading_files"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/no_file_search" />

        <TextView
            android:id="@+id/tv_no_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/no_file_bookmark"
            android:textColor="@color/colorNoFileB1BECD"
            android:textSize="16.30sp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pgb_fragment_file__loading"
        android:layout_width="32.50dp"
        android:layout_height="32.50dp"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/app_color" />
</RelativeLayout>