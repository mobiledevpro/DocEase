<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:padding="4dp"
    >

    <RelativeLayout
        android:id="@+id/click_file"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imv_item_file_search__icon"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="9.10dp"
            android:layout_marginTop="9.10dp"
            android:layout_marginEnd="9.10dp"
            android:layout_marginBottom="9.10dp"
            app:srcCompat="@drawable/menu_pdf" />

        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="6.5dp"
            android:layout_toEndOf="@id/imv_item_file_search__icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_item_file_search__name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/nunito"
                android:gravity="start|center"
                android:layout_weight="600"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@color/colorBlack_1F4B6E"
                android:textSize="13sp" />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/txv_item_item_file__date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/nunito"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textColor="@color/colorActive_1F4B6E"
                    android:textSize="11sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/divider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | "
                    android:textSize="12sp"
                    android:textColor="@color/colorActive_1F4B6E"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:gravity="center"
                    android:layout_toEndOf="@id/txv_item_item_file__date"
                    />

                <TextView
                    android:id="@+id/txv_item_item_file__detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:layout_toEndOf="@id/divider"
                    android:fontFamily="@font/nunito"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textColor="@color/colorActive_1F4B6E"
                    android:textSize="11sp" />
            </RelativeLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imv_item_item_file__more__choose"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"
            android:layout_width="12dp"
            android:layout_height="18dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/ic_next" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>