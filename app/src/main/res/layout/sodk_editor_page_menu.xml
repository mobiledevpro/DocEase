<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/sodk_editor_page_menu_style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@id/delete_button_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@id/delete_button"
            style="@style/sodk_editor_page_menu_item_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete" />

        <View
            style="@style/sodk_editor_page_menu_divider_style"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:id="@id/duplicate_button"
        style="@style/sodk_editor_page_menu_item_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/duplicate" />
</LinearLayout>